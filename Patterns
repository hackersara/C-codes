// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() 
{

int rowno=1;
int tr;
cin>>tr;


while(rowno<=tr)
{
    
// space 
int i=1;
while(i<=tr-rowno)
{
    cout<<' ';
    i=i+1;
}


// star 

int j=1;
while(j<=rowno)
{
    cout<<'*';
    j=j+1;
}
cout<<endl;
rowno=rowno+1;
    
}

    return 0;
}
